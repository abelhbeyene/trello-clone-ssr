{
  "name": "trello-ssr",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "ignore-styles": "^5.0.1",
    "nodemon": "^1.18.6",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-loadable": "^5.5.0",
    "react-scripts": "2.1.1"
  },
  "scripts": {
    "prettify": "prettier --config ./.prettierrc --write ./{src,server}/**/*.{js,jsx,css,scss}",
    "ssr": "concurrently --kill-others \"npm run watch:build\" \"npm run server\"",
    "server": "env NODE_ENV=development nodemon server/bootstrap.js",
    "client": "react-scripts start",
    "build": "react-scripts build",
    "watch:build": "npm-watch build && npm run prettify",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-preset-es2015": "^7.0.0-beta.3",
    "babel-preset-react-app": "^6.1.0",
    "babel-register": "^7.0.0-beta.3",
    "concurrently": "^4.1.0",
    "npm-watch": "^0.5.0",
    "prettier": "^1.15.3"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "."
      ],
      "ignore": [
        "build",
        "server"
      ],
      "extensions": "*",
      "quiet": false
    }
  }
}
